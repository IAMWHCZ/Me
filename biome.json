{
	"$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**/*.{js,ts,jsx,tsx}",
			"**/*.{json,md,yml,yaml}",
			"**/*.{css,scss}"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"includes": [
			"**/*.{js,ts,jsx,tsx}",
			"**/*.{json,md,yml,yaml}",
			"**/*.{css,scss}"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"includes": ["**/*.{js,ts,jsx,tsx}"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
