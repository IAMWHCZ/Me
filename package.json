{
  "name": "@cz/me",
  "version": "1.0.0",
  "description": "A monorepo containing web, mobile, and desktop applications with shared UI components",
  "main": "index.js",
  "scripts": {
    "dev": "turbo dev",
    "dev:ui": "pnpm -F @me/ui run dev",
    "dev:web": "pnpm -F @me/web run dev --open",
    "build": "turbo run build",
    "build:svg": "pnpm run -F @me/icons build:svg",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "format": "prettier **/*.{js,ts,jsx,tsx} --write --ignore-path .gitignore && git update-index --again",
    "rm:dep": "node scripts/rm-dep.js",
    "rm:dist": "node scripts/rm-dist.js",
    "prepare": "husky",
    "commit": "git add . && git-cz",
    "changeset": "changeset",
    "create-changeset": "bash ./scripts/create-changeset.sh",
    "create-changeset:win": "cmd /c scripts\\create-changeset.bat",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "version-and-release": "changeset version && changeset publish"
  },
  "keywords": [
    "monorepo",
    "react",
    "typescript",
    "tailwindcss",
    "web",
    "mobile",
    "desktop"
  ],
  "author": "Zhuo Cheng <cz2545481217@outlook.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.15.1",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "cz-config.js"
    }
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "tsx": "^4.7.0",
    "turbo": "^2.4.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwindcss": "^4.0.14",
    "tslib": "^2.3.0",
    "vite": "^7.1.7"
  }
}
