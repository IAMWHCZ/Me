{
  "name": "@cz/me",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "turbo dev",
    "dev:ui": "pnpm -F @me/ui run dev",
    "dev:web": "pnpm -F @me/web run dev --open",
    "build": "turbo run build",
    "build:svg": "pnpm run -F @me/icons build:svg",
    "format": "prettier **/*.{js,ts,jsx,tsx} --write --ignore-path .gitignore && git update-index --again",
    "rm:dep": "powershell -NoProfile -NoLogo -Command \"ls -r -dir node_modules | rm -r -fo\"",
    "rm:dist": "powershell -NoProfile -NoLogo -Command \"ls -r -dir dist | rm -r -fo\"",
    "prepare": "husky",
    "commit": "git add . && git-cz"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.15.1",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "cz-config.js"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "turbo": "^2.4.1",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^4.0.14",
    "tslib": "^2.3.0",
    "vite": "^6.2.2"
  }
}
